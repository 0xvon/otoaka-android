<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenimg"
    tools:context=".ui.registration.RegistrationFragment">

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="音楽性具現化SNS"
        android:textColor="@color/text"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_view" />

    <TextView
        android:id="@+id/google_login"
        style="bold"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="387dp"
        android:background="@drawable/backgraund_button"
        android:backgroundTint="@color/google"
        android:gravity="center"
        android:text="Googleでログイン"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/facebook_login"
        style="bold"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="457dp"
        android:background="@drawable/backgraund_button"
        android:backgroundTint="@color/facebook"
        android:gravity="center"
        android:text="Facebookでログイン"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/twitter_login"
        style="bold"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="527dp"
        android:background="@drawable/backgraund_button"
        android:backgroundTint="@color/twitter"
        android:gravity="center"
        android:text="Twitterでログイン"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apple_login"
        style="bold"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="597dp"
        android:background="@drawable/backgraund_button"
        android:backgroundTint="@color/apple"
        android:gravity="center"
        android:text="Appleでログイン"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="667dp"
        android:background="@drawable/backgraund_button"
        android:text="利用規約"
        android:textColor="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>